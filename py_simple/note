# ransom_note_generator.py
import datetime
import os

class RansomNoteGenerator:
    def __init__(self):
        self.notes = [
            "YOUR FILES HAVE BEEN ENCRYPTED!\n\nTo decrypt your files, send 0.001 BTC to: fake_bitcoin_address_12345\n\nYou have 24 hours.",
            "Ooops! Your files have been encrypted.\n\nPayment required: 0.5 BTC\nAddress: fake_btc_wallet_67890\n\nDon't try to recover files yourself!",
            "=== RANSOMWARE SIMULATION ===\n\nThis is a test for cybersecurity education.\nAll files can be recovered using the decryption tool.\n\n--- EDUCATIONAL PURPOSE ONLY ---"
        ]
    
    def create_ransom_notes(self, directory="C:\\test_files\\"):
        """Create realistic ransom notes"""
        note_formats = [
            f"{directory}READ_THIS.txt",
            f"{directory}DECRYPT_INSTRUCTIONS.html",
            f"{directory}RECOVERY_FILE.txt"
        ]
        
        for note_path in note_formats:
            with open(note_path, 'w', encoding='utf-8') as f:
                note_content = f"""
                ‚ö†Ô∏è YOUR FILES HAVE BEEN ENCRYPTED! ‚ö†Ô∏è
                
                What happened?
                - Your files have been encrypted with military-grade encryption
                - File extensions have been changed
                - You cannot access your files without the decryption key
                
                How to recover your files?
                - This is a SIMULATION for educational purposes
                - Run the decryption tool provided with this simulator
                - No payment is required
                
                üîê This is a SECURITY TEST for ransomware analysis training
                üìÖ Date: {datetime.datetime.now()}
                üéØ Target: Windows 11 Test Environment
                
                FOR EDUCATIONAL USE ONLY - NOT REAL RANSOMWARE
                """
                f.write(note_content)
        
        print("Ransom notes created for analysis")

# Usage
note_gen = RansomNoteGenerator()
note_gen.create_ransom_notes()
